<h1>Chat about: <%= @chat.problem.title %></h1>

<h2>All your chats:</h2>
<% current_user.chats.each do |chat| %>
  <p><%= link_to "View Chat ##{chat.id}", chat_path(chat) %></p>
<% end %>

<h2>Messages:</h2>
<% @chat.messages.order(:created_at).each do |message| %>
  <p>
    <strong><%= message.role.capitalize %>:</strong>
    <%= message.content %>
    <br>
    <small><%= message.created_at.strftime %></small>
  </p>
<% end %>

<p>
  <%= link_to "Send a Message", new_message_path(chat_id: @chat.id) %> |
  <%= link_to "Back to Chats", chats_path %>
</p>
