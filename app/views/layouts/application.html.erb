<!DOCTYPE html>
<html>
  <head>
    <title>Pocket PocketPsychologist</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>

     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
     

     <div class="main-content">
      <%= render "components/navbar" %>
        <% if @side_nav %>
          <div class="row" data-controller="toggle">
            <div class="col-md-2 sidebar pt-1 pb-1" data-toggle-target="hideable">
              <%= render "shared/side_nav", problems: @problems %>
            </div>
            <div class="col-md-10 my-4">
              <%= link_to "#", class: " nav-link text-dark",
              data: { action: "click->toggle#call", toggle_target: "show" } do %>
                <i class="ms-2 fa-regular fa-square-caret-right"></i>
              <% end %>
              <%= yield %>
            </div>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
     </div>
  </body>
</html>
