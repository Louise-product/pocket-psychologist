<div class="container">
  <div class="d-flex justify-content-center">
    <div class="form-container mt-5 bg-white p-5 rounded-5">
      <h1 class="mb-3 text-center">Input your problem</h1>
      <div class="border p-3 rounded-5">
        <%=simple_form_for (@problem) do |f|%>
          <div class="form-inputs">
            <%=f.input :title, input_html: { class: "rounded-3" }%>
            <%=f.input :content, as: :text, placeholder: "What is your problem?", input_html: { class: "rounded-3" } %>
            <div class="d-flex justify-content-end">
              <%= f.button :submit, "Start chat", class: "btn btn-primary"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
