<div class="side-nav-container text-center p-3 rounded-4 border  position-sticky sticky-top nav flex-column">
  <div class="text-start">
     <%= link_to "#", class: "d-none nav-link text-dark",
    data: { action: "click->toggle#call", toggle_target: "show" } do %>
      <i class="fa-regular fa-square-caret-right"></i>
    <% end %>
    <div class="btn btn-primary w-100">Homepage</div>
    <hr>
    <h2>Your problems </h2>
    <% current_user.problems.each do |problem| %>
      <div class="nav-item">
        <h3><%= link_to"#{problem.title}", problem %></h3>
        <hr>
        <% problem.chats.each do |chat| %>
          <h5 class="text-decoration-none"><i class="fa-regular fa-message"></i>
            <% if chat.messages.by_user.any?  %>
              <%= link_to"#{chat.messages.by_user.first.content.truncate(18, separator: " ")}", chat_path(chat) %>
            <% else %>
              <%= link_to "New Chat", chat_path(chat) %>
            <% end %>
          </h5>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
.<div class="arrow ms-2 fa-regular fa-square-caret-right"></div>